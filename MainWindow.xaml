<Window x:Class="ticTacToeGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ticTacToeGame"
        mc:Ignorable="d"
        Title="Tic Tac Toe" Height="476" Width="800">
    <Canvas>
        <GroupBox Height="104" Header="Stats" Width="244" Canvas.Left="476" Canvas.Top="30">
            <StackPanel>
                <Label x:Name="Player1WinsLabel" Content="Player 1 Wins: 0"/>
                <Label x:Name="Player2WinsLabel" Content="Player 2 Wins: 0"/>
                <Label x:Name="TiesLabel" Content="Ties: 0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Height="62" Header="Status" Width="299" Canvas.Left="36" Canvas.Top="392">
            <Label x:Name="StatusLabel" Content="Player 1's turn" Height="36" />
        </GroupBox>


        <Label x:Name="Lbl00" Content="X" Canvas.Left="19" Canvas.Top="10" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="Lbl01" Content="X" Canvas.Left="116" Canvas.Top="10" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="Lbl02" Content="X" Canvas.Left="213" Canvas.Top="10" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <Label x:Name="Lbl10" Content="O" Canvas.Left="19" Canvas.Top="124" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="Lbl11" Content="O" Canvas.Left="116" Canvas.Top="124" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="Lbl12" Content="O" Canvas.Left="213" Canvas.Top="124" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>

        <Label x:Name="Lbl20" Content="X" Canvas.Left="19" Canvas.Top="238" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1"/>
        <Label x:Name="Lbl21" Content="X" Canvas.Left="116" Canvas.Top="238" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="Lbl22" Content="X" Canvas.Left="213" Canvas.Top="238" FontSize="80" MouseDown="PlayersMoveClick" Width="97" Height="114" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <Button x:Name="cmdStartPvP" Content="Play with Player 2" Canvas.Left="476" Canvas.Top="169" Height="27" Width="99" Click="startGamePvPBtn_Click"/>
        <Button x:Name="cmdStartAI" Content="Play with AI" Canvas.Left="476" Canvas.Top="210" Height="27" Width="99" Click="startGameAIBtn_Click"/>

    </Canvas>


</Window>
